{
  "mcpServers": {
    "step_orchestrator": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "task_orchestrator",
        "python",
        "/app/step_orchestrator.py"
      ],
      "alwaysAllow": [
        "get_next_step",
        "mark_step_complete",
        "reset_steps"
      ],
      "description": "Containerized step orchestrator for sequential step management.",
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}
